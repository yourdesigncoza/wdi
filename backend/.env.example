# WillCraft SA - Backend Environment Variables
# Copy to .env and update with your values

# PostgreSQL connection string (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://user:pass@localhost/willcraft

# Secret key for signing tokens (generate a strong random value)
SECRET_KEY=change-me-in-production

# Debug mode (set to false in production)
DEBUG=true

# POPIA consent version (increment when consent form changes)
CONSENT_VERSION=1.0

# Privacy policy version (increment when policy changes)
PRIVACY_POLICY_VERSION=1.0

# Application
APP_NAME=WillCraft SA
APP_VERSION=0.1.0
